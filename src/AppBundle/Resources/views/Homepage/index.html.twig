{% extends 'AppBundle::base.html.twig' %}

{% block body %}

{{ render(controller('AppBundle:Homepage:menu')) }}

<div class="container">
  <div id="homepage-carousel" class="owl-carousel">
    {% for article in articlesWithCover %}
      <div class="item {% if loop.first %}active{% endif %}">
        <img class="owl-lazy" data-src="{% path (article.medias|first).media, 'cover' %}" alt="{{ article.title }}" />
        <div class="carousel-caption">
          <h4>{{ article.title }}</h4>
          <p>{{ article.content|striptags|raw|slice(0, 30) }}â€¦</p>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="panel panel-default">
    <div class="panel-body">
      <p>Bonjoure {{ app.user.firstName }} {{ app.user.lastName }} (test authentification CAS + LDAP)</p>
      <img alt="{{ app.user }}"  src="data:image/jpg;base64,{{ app.user.photo }}" class="img-thumbnail" />
    </div>
  </div>
</div>

{% endblock %}
